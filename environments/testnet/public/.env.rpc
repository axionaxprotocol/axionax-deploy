# RPC Node Configuration
NODE_MONIKER=rpc-01
NODE_TYPE=full

# RPC Optimization
RPC_MAX_OPEN_CONNECTIONS=1000
RPC_MAX_SUBSCRIPTION_CLIENTS=100
RPC_MAX_SUBSCRIPTIONS_PER_CLIENT=5
RPC_TIMEOUT_BROADCAST_TX_COMMIT=10s

# API Configuration
API_ENABLE=true
API_SWAGGER=true
API_MAX_OPEN_CONNECTIONS=1000

# gRPC Configuration
GRPC_MAX_RECV_MSG_SIZE=10485760
GRPC_MAX_SEND_MSG_SIZE=10485760

# State Sync Server
STATE_SYNC_SNAPSHOT_INTERVAL=1000
STATE_SYNC_SNAPSHOT_KEEP_RECENT=2

# Indexing
INDEXER=kv
TX_INDEX=on

# CORS
RPC_CORS_ALLOWED_ORIGINS=*
API_CORS_ALLOWED_ORIGINS=*
GRPC_WEB_ENABLE=true

# Load Balancing
ENABLE_UNSAFE_CORS=false
RATE_LIMIT_ENABLE=true
RATE_LIMIT_REQUESTS_PER_SECOND=100

# Cache
CACHE_SIZE=10000
