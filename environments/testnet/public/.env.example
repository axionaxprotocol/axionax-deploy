# Network Configuration
CHAIN_ID=axionax-testnet-1
NETWORK_NAME=Axionax Public Testnet

# Node Configuration
NODE_MONIKER=my-node
NODE_HOME=/data/axionax

# P2P Configuration
P2P_LADDR=tcp://0.0.0.0:26656
P2P_SEEDS=
P2P_PERSISTENT_PEERS=

# RPC Configuration
RPC_LADDR=tcp://0.0.0.0:26657
RPC_CORS_ALLOWED_ORIGINS=*

# gRPC Configuration
GRPC_LADDR=0.0.0.0:9090

# API Configuration
API_ENABLE=true
API_ADDRESS=tcp://0.0.0.0:1317
API_SWAGGER=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLE=true
PROMETHEUS_ADDR=:26660

# Database
DB_BACKEND=goleveldb

# Pruning
PRUNING=default
PRUNING_KEEP_RECENT=100
PRUNING_INTERVAL=10

# State Sync (optional)
STATE_SYNC_ENABLE=false
STATE_SYNC_RPC_SERVERS=
STATE_SYNC_TRUST_HEIGHT=0
STATE_SYNC_TRUST_HASH=

# Snapshot Configuration
SNAPSHOT_INTERVAL=1000
SNAPSHOT_KEEP_RECENT=2

# Resource Limits
MIN_GAS_PRICE=0.025uaxx
MAX_TX_BYTES=1048576
MAX_BLOCK_SIZE=4194304
